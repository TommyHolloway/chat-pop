{% comment %}
  ChatPop Widget Configuration
  This snippet injects the widget configuration into the page
{% endcomment %}

{% if shop.metafields.chatpop.agent_id %}
<script>
  window.ChatPopConfig = {
    agentId: {{ shop.metafields.chatpop.agent_id | json }},
    shopDomain: {{ shop.domain | json }},
    enabled: {{ enabled | default: true }}
  };
</script>
{{ 'widget-loader.js' | asset_url | script_tag }}
{% endif %}
